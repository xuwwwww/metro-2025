<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#E0F7FA">
    
        <!-- 公館站 -->
    <TextView
        android:id="@+id/title_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公館站"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- x秒後更新（可用 RemoteViews 動態更新） -->
    <TextView
        android:id="@+id/refresh_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x秒後更新"
        android:textColor="#F52626"
        android:textSize="10sp"
        android:layout_marginTop="2dp" />

    <!-- 列容器：模擬有邊框的灰白底（不額外 drawable） -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginTop="6dp">

        <!-- 外層黑色邊框（1dp） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:padding="1dp">

            <!-- 內層底色 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FAFAF7">

                <!-- 內容橫排 -->
                <LinearLayout
                    android:id="@+id/row_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <!-- 00分30秒：膠囊（暫以淺底矩形表示） -->
                    <TextView
                        android:id="@+id/eta_chip"
                        android:layout_width="74dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="00分 30秒"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:background="#1AFFFFFF" />

                    <!-- 「往」 -->
                    <TextView
                        android:id="@+id/label_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="往"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <!-- 線別徽章：G / 19 -->
                    <TextView
                        android:id="@+id/badge_line"
                        android:layout_width="16dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="6dp"
                        android:gravity="center"
                        android:text="G\n19"
                        android:textColor="#FFFFFF"
                        android:textSize="8sp"
                        android:background="#008659" />

                    <!-- 目的地：松山（半粗用 bold 近似） -->
                    <TextView
                        android:id="@+id/destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="松山"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    
    <ImageView
        android:id="@+id/my_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/metro_station"/>


</LinearLayout>
